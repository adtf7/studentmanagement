<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Manager</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea, #764ba2);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            padding: 40px 20px;
        }

        .wrapper {
            width: 100%;
            max-width: 900px;
            background: #ffffff;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        header h1 {
            font-weight: 600;
            color: #333;
        }

        .add-btn {
            text-decoration: none;
            background: #4CAF50;
            color: white;
            padding: 10px 18px;
            border-radius: 6px;
            transition: 0.3s;
        }

        .add-btn:hover {
            background: #45a049;
        }

        .students {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }

        .card {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 10px;
            transition: 0.3s;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }

        .card-body h3 {
            margin-bottom: 10px;
            color: #333;
        }

        .card-body p {
            margin-bottom: 6px;
            color: #555;
        }

        .card-actions {
            margin-top: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .edit {
            text-decoration: none;
            color: #2196F3;
            font-weight: 500;
        }

        .delete {
            background: #f44336;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete:hover {
            background: #d32f2f;
        }

        .empty {
            text-align: center;
            padding: 40px 0;
            color: #555;
        }

        @media (max-width: 600px) {
            header {
                flex-direction: column;
                gap: 15px;
            }
        }
    </style>
</head>

<body>

<div class="wrapper">
    <header>
        <h1>ðŸŽ“ Student Manager</h1>
        <a href="/add" class="add-btn">+ Add Student</a>
    </header>

    <section class="students">

        <% if (student && student.length > 0) { %>
            <% student.forEach(item => { %>

                <div class="card">
                    <div class="card-body">
                        <h3><%= item.name %></h3>
                        <p><strong>Age:</strong> <%= item.age %></p>
                        <p><strong>Grade:</strong> <%= item.grade %></p>
                    </div>

                    <div class="card-actions">
                        <a href="/edit/<%= item._id %>" class="edit">Edit</a>

                        <form action="/delete/<%= item._id %>" method="POST">
                            <button type="submit" class="delete">Delete</button>
                        </form>
                    </div>
                </div>

            <% }) %>
        <% } else { %>
            <div class="empty">
                <h2>No Students Available</h2>
                <p>Click "Add Student" to create one.</p>
            </div>
        <% } %>

    </section>
</div>

</body>
</html>